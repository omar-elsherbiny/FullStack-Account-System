<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="/js/script.js" defer></script>
  <script src="/js/profile.js" defer></script>
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/profile.css" />
  <title>Account System</title>
</head>

<body>
  <%- include('./partials/alerts.ejs') %>
  <%- include('./partials/header.ejs') %>

  <main>
    <div class="profile-container">
      <div class="banner"></div>
      <img class="profile-picture" src="/media/profile-icon.png" alt="profile picture placeholder">
      <div class="content">
        <% if (profileDisplayName) { %>

        <h1><%= profileDisplayName %></h1>
        <h3>@<%= profileUsername %></h3>

        <% } else { %>
        <h1>@<%= profileUsername %></h1>
        <% } %>
        <h3>Member since: xx/xx/xxxx</h3>
        <div class="about-me">
          <h2>About Me</h2>
          <textarea name="about-me-textbox" id="about-me-textbox"></textarea>
        </div>
        <% if (canEdit) { %>
        <button class="profile-edit-button" id="profile-edit-button">Edit</button>
        <% } %>
      </div>
    </div>
  </main>
</body>

</html>